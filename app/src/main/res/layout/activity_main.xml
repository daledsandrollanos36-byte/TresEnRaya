<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TXVTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GLYBoard"
        android:layout_below="@+id/TXVTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:columnCount="3"
        android:rowCount="3"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"

    >
     <Button
         android:id="@+id/BTN00"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:background="@color/blue"

         >

     </Button>
        <Button
            android:id="@+id/BTN01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/blue"


            >

        </Button>
        <Button
            android:id="@+id/BTN02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/blue"


            >

        </Button>
        <Button
            android:id="@+id/BTN10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/blue"


            >

        </Button>
        <Button
            android:id="@+id/BTN11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/blue"


            >

        </Button>
        <Button
            android:id="@+id/BTN12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/blue"


            >

        </Button>
        <Button
            android:id="@+id/BTN20"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/blue"


            >

        </Button>
        <Button
            android:id="@+id/BTN21"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/blue"

            >

        </Button>
        <Button
            android:id="@+id/BTN22"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/blue"


            >

        </Button>
    </GridLayout>

    <TextView
        android:id="@+id/TXVPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GLYBoard"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:text="@string/playerO"

        />

    <Button
        android:id="@+id/BTNRestartgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TXVPlayer"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="15sp"
        android:visibility="invisible"
        android:text="@string/restartgame" />
</RelativeLayout>